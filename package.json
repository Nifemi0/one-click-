{
  "name": "drosera-one-click",
  "version": "1.0.0",
  "description": "Drosera One-Click Deployment System - Complete Web3 Security Platform",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:hoodi": "hardhat run scripts/deploy.js --network hoodi",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:dev": "cd frontend && npm run dev"
  },
  "keywords": [
    "web3",
    "security",
    "defi",
    "drosera",
    "blockchain",
    "smart-contracts",
    "solidity",
    "hardhat"
  ],
  "author": "Drosera Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.6.1",
    "hardhat": "^2.26.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nifemi0/one-click-.git"
  },
  "bugs": {
    "url": "https://github.com/Nifemi0/one-click-/issues"
  },
