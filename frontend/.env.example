# Frontend Environment Configuration Example
# Copy this file to .env.local and fill in your values

# Backend API Connection
NEXT_PUBLIC_API_URL=http://localhost:3001

# Hoodi Testnet Configuration
NEXT_PUBLIC_HOODI_CHAIN_ID=560048
NEXT_PUBLIC_HOODI_RPC_URL=https://eth-hoodi.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
NEXT_PUBLIC_HOODI_BLOCK_EXPLORER=https://hoodi.etherscan.io
NEXT_PUBLIC_HOODI_NATIVE_CURRENCY=ETH

# Feature Flags
NEXT_PUBLIC_ENABLE_BASIC_TRAPS=true
NEXT_PUBLIC_ENABLE_ENHANCED_AI=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true

# Development Settings
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEBUG_MODE=true

# Optional: Smart Contract Addresses (if you have them)
# NEXT_PUBLIC_HOODI_DROSERA_FACTORY=0x...
# NEXT_PUBLIC_HOODI_DROSERA_REGISTRY=0x...