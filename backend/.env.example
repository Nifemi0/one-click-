# ===== CORE CONFIGURATION =====
NODE_ENV=development
PORT=3001
HOST=localhost
FRONTEND_URL=http://localhost:3000

# ===== DATABASE SECRETS =====
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR_SUPABASE_ANON_KEY]
SUPABASE_SERVICE_KEY=[YOUR_SUPABASE_SERVICE_KEY]

# ===== JWT SECRETS =====
JWT_SECRET=[GENERATE_64_CHARACTER_RANDOM_STRING]
JWT_EXPIRES_IN=7

# ===== AI API SECRETS =====
CURSOR_API_KEY=[YOUR_CURSOR_API_KEY]
GEMINI_API_KEY=[YOUR_GEMINI_API_KEY]
CLAUDE_API_KEY=[YOUR_CLAUDE_API_KEY]
OPENAI_API_KEY=[YOUR_OPENAI_API_KEY]

# ===== BLOCKCHAIN SECRETS =====
# Hoodi Testnet RPC Endpoints (Multi-Fallback)
ALCHEMY_HOODI_RPC_URL=https://eth-hoodi.g.alchemy.com/v2/[YOUR_ALCHEMY_KEY]
ALCHEMY_API_KEY=[YOUR_ALCHEMY_API_KEY]
HOODI_RPC_URL=https://rpc.hoodi.network
HOODI_ALT_RPC_URL=https://rpc2.hoodi.network
PUBLIC_HOODI_RPC_URL=https://public-rpc.hoodi.network

# Hoodi Block Explorer
HOODI_ETHERSCAN_API_KEY=[YOUR_HOODI_ETHERSCAN_API_KEY]

# Smart Contract Addresses (After Deployment)
HOODI_DROSERA_FACTORY=[DEPLOYED_CONTRACT_ADDRESS]
HOODI_DROSERA_REGISTRY=[DEPLOYED_CONTRACT_ADDRESS]
HOODI_DROSERA_ORACLE=[DEPLOYED_CONTRACT_ADDRESS]

# ===== RPC FALLBACK CONFIGURATION =====
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=1000
RPC_HEALTH_CHECK_INTERVAL=30000
RPC_CIRCUIT_BREAKER_THRESHOLD=5
RPC_LOAD_BALANCING=priority

# ===== REVENUE CONFIGURATION =====
DEPLOYMENT_FEE_BASIC=0.005
DEPLOYMENT_FEE_PREMIUM=0.015
DEPLOYMENT_FEE_ENTERPRISE=0.05
SUBSCRIPTION_FEE_BASIC=0.002
SUBSCRIPTION_FEE_PREMIUM=0.008
SUBSCRIPTION_FEE_ENTERPRISE=0.025
FEATURE_FEE_AI_ANALYSIS=0.001
FEATURE_FEE_ADVANCED_MONITORING=0.002
FEATURE_FEE_THREAT_RESPONSE=0.003

# ===== NOTIFICATION SERVICE SECRETS =====
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=[YOUR_EMAIL]
SMTP_PASS=[YOUR_APP_PASSWORD]

# Telegram Bot
TELEGRAM_BOT_TOKEN=[YOUR_TELEGRAM_BOT_TOKEN]
TELEGRAM_CHAT_ID=[YOUR_TELEGRAM_CHAT_ID]

# Discord Webhook
DISCORD_WEBHOOK_URL=[YOUR_DISCORD_WEBHOOK_URL]

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=[YOUR_VAPID_PUBLIC_KEY]
VAPID_PRIVATE_KEY=[YOUR_VAPID_PRIVATE_KEY]

# ===== MONITORING & ANALYTICS SECRETS =====
# Sentry (Error Tracking)
SENTRY_DSN=[YOUR_SENTRY_DSN]

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/drosera.log

# ===== SECURITY SECRETS =====
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===== ENCRYPTION SECRETS =====
# For sensitive data encryption
ENCRYPTION_KEY=[GENERATE_32_CHARACTER_RANDOM_STRING]
ENCRYPTION_IV=[GENERATE_16_CHARACTER_RANDOM_STRING]